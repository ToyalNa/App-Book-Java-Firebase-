<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bookapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icona"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:exported="false" />
        <activity android:name=".activity.EditProfileActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.ReadPdfActivity" />
        <activity android:name=".activity.DetailPdfActivity" />
        <activity android:name=".activity.PdfEditActivity" />
        <activity android:name=".activity.PdfListAdminActivity" />
        <activity android:name=".activity.AddPdfActivity" />
        <activity android:name=".activity.CategoryAddActivity" />
        <activity android:name=".activity.DashboardAdminActivity" />
        <activity android:name=".activity.DashboardUserActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>